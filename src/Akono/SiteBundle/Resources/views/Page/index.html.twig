{% extends 'AkonoSiteBundle::layout.html.twig' %}

{% block body %}
    <div id="featured-section">
        <h2>We design original and effective online experiences</h2>
        <div id="circles">
            {% set i = 0 %}
            {% for blob in blobs %}
                {% if(i == 0) %}
                    <img class="first" src="images/{{ blob.image }}" title="{{ blob.title }}" alt="{{ blob.title }}"/>
                {% else %}
                    <img class="" src="images/{{ blob.image }}" alt="{{ blob.title }}" title="{{ blob.title }}"/>
                {% endif %}
                {% set i = i + 1 %}
            {% endfor %}
        </div>
        <!--end circles-->
        <div id="image-slider">
            <ul id="mycarousel" class="jcarousel-skin-tango">
                {% set j = 0 %}
                {% for slide in slides %}
                    <li {% if(j % 3 == 0) %}class="first" {% endif %}>
                        <a href="{{ path('akono_site_portfolio') }}/{{ slide.id }}"><img width="280" height="190" src="images/{{ slide.image }}" alt="{{ slide.title }}" /></a>
                    </li>
                    {% set j = j + 1 %}
                {% endfor %}
            </ul>
        </div>
        <!--end image-slider-->
    </div>
    <!--end featured-section-->
